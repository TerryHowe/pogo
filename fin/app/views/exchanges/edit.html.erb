<h1>Editing exchange</h1>

<% form_for(@exchange) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :opening %><br />
    <%= f.select :openhour, Exchange.hours() %>
    <%= f.select :openminute, Exchange.minutes() %>
  </p>
  <p>
    <%= f.label :closing %><br />
    <%= f.select :closehour, Exchange.hours() %>
    <%= f.select :closeminute, Exchange.minutes() %>
  </p>
  <p>
    <%= f.label :timezone %><br />
    <%= f.select :timezone, Exchange.timezones() %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @exchange %> |
<%= link_to 'Back', exchanges_path %>
